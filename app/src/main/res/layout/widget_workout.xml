<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- App icon branding -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/ic_launcher_round" />

        <!-- Streak -->
        <TextView
            android:id="@+id/widget_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/bone_100"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_streak_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="12dp"
            android:text="day"
            android:textColor="@color/bone_40"
            android:textSize="11sp" />

        <!-- Separator -->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="#20FFFFFF"
            android:orientation="vertical" />

        <!-- 9 day cells -->
        <ImageView
            android:id="@+id/widget_cell_0"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <ImageView
            android:id="@+id/widget_cell_1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <ImageView
            android:id="@+id/widget_cell_2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <ImageView
            android:id="@+id/widget_cell_3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <!-- Today -->
        <ImageView
            android:id="@+id/widget_cell_4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/bg_widget_cell_today_empty" />

        <ImageView
            android:id="@+id/widget_cell_5"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <ImageView
            android:id="@+id/widget_cell_6"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <ImageView
            android:id="@+id/widget_cell_7"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <ImageView
            android:id="@+id/widget_cell_8"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/bg_widget_cell_empty" />

        <!-- MAX OUT badge -->
        <TextView
            android:id="@+id/widget_badge_maxout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_widget_badge_maxout"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp"
            android:text="MAX OUT"
            android:textColor="@color/vermilion"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
