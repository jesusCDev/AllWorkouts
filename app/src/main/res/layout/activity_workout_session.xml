<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_session_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_900"
    android:fitsSystemWindows="true"
    tools:context=".WorkoutSessionActivity">

    <!-- Workout image constrained to reasonable size (behind title) -->
    <ImageView
        android:id="@+id/iv_workout_workoutImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/workout_exercise_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBlock"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintDimensionRatio="H,1:1.2" />

    <!-- Workout title (on top of image) -->
    <TextView
        android:id="@+id/tv_workout_WorkoutName"
        style="@style/TextAppearance.App.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_4"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_4"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:textSize="@dimen/text_size_headline"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="8"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Push Ups Session" />
        
    <!-- Subtle overlay for text readability covering entire screen -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_modern_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Rep numbers floating over image -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_workout_WorkoutName"
        app:layout_constraintBottom_toTopOf="@id/bottomBlock">

        <com.iambedant.text.OutlineTextView
            android:id="@+id/tv_workout_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bone_100"
            android:textSize="200sp"
            android:fontFamily="@font/teko"
            android:alpha="1.0"
            app:outlineColor="#000000"
            app:outlineWidth="4.0"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="12"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/timer_display"
            tools:text="30" />

        <com.iambedant.text.OutlineTextView
            android:id="@+id/tv_workout_repNumber_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bone_100"
            android:textSize="180sp"
            android:fontFamily="@font/teko"
            android:alpha="1.0"
            app:outlineColor="#000000"
            app:outlineWidth="5.0"
            android:shadowColor="#90000000"
            android:shadowDx="0"
            android:shadowDy="6"
            android:shadowRadius="16"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/rep_count_display"
            tools:text="15" />

        <com.iambedant.text.OutlineTextView
            android:id="@+id/otv_workout_repNumber_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent"
            android:textSize="160sp"
            app:outlineColor="@color/colorAccent"
            app:outlineWidth="3.0"
            android:fontFamily="@font/teko"
            android:alpha="0.4"
            android:shadowColor="#70000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:importantForAccessibility="no"
            tools:text="15" />
    </LinearLayout>

    <!-- ─── Bottom stats + big CTA (transparent) ─────────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/bottomBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_3"
        android:paddingEnd="@dimen/spacing_3"
        android:paddingTop="@dimen/spacing_3"
        android:paddingBottom="@dimen/spacing_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- ─── Media Controls (when enabled) ────────────────────────────── -->
        <include 
            android:id="@+id/media_controls"
            layout="@layout/media_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:visibility="gone" />

        <!-- 5 value "pill" chips -->
        <LinearLayout
            android:id="@+id/ll_workout_ValueHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Modern chip-style value displays -->
            <TextView
                android:id="@+id/tv_workout_Value1"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_chip_glossy"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:text="15" />

            <TextView
                android:id="@+id/tv_workout_Value2"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip_glossy"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:text="12" />

            <TextView
                android:id="@+id/tv_workout_Value3"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip_glossy"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:text="10" />

            <TextView
                android:id="@+id/tv_workout_Value4"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip_glossy"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:text="8" />

            <TextView
                android:id="@+id/tv_workout_Value5"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip_glossy"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:text="5" />
        </LinearLayout>

        <!-- Jumbo COMPLETE button with glassmorphism -->
        <Button
            android:id="@+id/btn_workout_CompleteTask"
            style="@style/Widget.App.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/complete"
            android:onClick="btnActionChangeActivities"
            android:contentDescription="@string/complete_set_button"
            android:elevation="@dimen/elevation_button"/>
    </LinearLayout>
    
    <!-- Skip workout countdown overlay -->
    <include
        android:id="@+id/skip_workout_overlay"
        layout="@layout/skip_workout_countdown_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
