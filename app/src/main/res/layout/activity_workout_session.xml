<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4">

    <LinearLayout
        android:id="@+id/workoutExplainationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:translationZ="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_workout_WorkoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingTop="8dp"
            android:text="Workout"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/priority_1" />

        <include
            android:id="@+id/i_workout_Include"
            layout="@layout/workout_session_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="100dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fakeSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_workout_timeImageHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:translationZ="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fakeSpace"/>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ll_workout_ValueHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_workout_Value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/unSelectedButton"
                android:textSize="@dimen/priority_2" />

            <TextView
                android:id="@+id/tv_workout_Value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/unSelectedButton"
                android:textSize="@dimen/priority_2" />

            <TextView
                android:id="@+id/tv_workout_Value3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/unSelectedButton"
                android:textSize="@dimen/priority_2" />

            <TextView
                android:id="@+id/tv_workout_Value4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/unSelectedButton"
                android:textSize="@dimen/priority_2" />

            <TextView
                android:id="@+id/tv_workout_Value5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/unSelectedButton"
                android:textSize="@dimen/priority_2" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_workout_CompleteTask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="btnAction_ChangeActivities"
            android:text="Complete"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/btn_textSize"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>