<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true"
    tools:context=".WorkoutSessionActivity">

    <!-- Workout title -->
    <TextView
        android:id="@+id/tv_workout_WorkoutName"
        style="@style/TextAppearance.App.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_4"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_4"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:textSize="@dimen/text_size_headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Push Ups Session" />

    <!-- Hero card with comic panel design -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_workout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginEnd="@dimen/spacing_3"
        android:layout_marginTop="@dimen/spacing_3"
        android:layout_marginBottom="@dimen/spacing_3"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_workout_WorkoutName"
        app:layout_constraintBottom_toTopOf="@id/bottomBlock">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/c_workoutSession_TimerRepsWorkoutHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Enhanced workout image with comic frame -->
            <ImageView
                android:id="@+id/iv_workout_workoutImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_comic_art_frame"
                android:padding="24dp"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Centered text overlay for rep numbers and timer -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.iambedant.text.OutlineTextView
                    android:id="@+id/tv_workout_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="180sp"
                    android:fontFamily="@font/archivo_black"
                    android:alpha="1.0"
                    app:outlineColor="@android:color/white"
                    app:outlineWidth="4.0"
                    android:shadowColor="#CC000000"
                    android:shadowDx="0"
                    android:shadowDy="6"
                    android:shadowRadius="12"
                    android:importantForAccessibility="yes"
                    android:contentDescription="@string/timer_display"
                    tools:text="30" />

                <com.iambedant.text.OutlineTextView
                    android:id="@+id/tv_workout_repNumber_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="160sp"
                    android:fontFamily="@font/archivo_black"
                    android:alpha="0.7"
                    app:outlineColor="@android:color/white"
                    app:outlineWidth="4.0"
                    android:shadowColor="#CC000000"
                    android:shadowDx="0"
                    android:shadowDy="6"
                    android:shadowRadius="12"
                    android:importantForAccessibility="yes"
                    android:contentDescription="@string/rep_count_display"
                    tools:text="15" />

                <com.iambedant.text.OutlineTextView
                    android:id="@+id/otv_workout_repNumber_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/transparent"
                    android:textSize="160sp"
                    app:outlineColor="@color/primary_ripple"
                    app:outlineWidth="3.0"
                    android:fontFamily="@font/archivo_black"
                    android:alpha="0.8"
                    android:shadowColor="#CC000000"
                    android:shadowDx="0"
                    android:shadowDy="6"
                    android:shadowRadius="12"
                    android:importantForAccessibility="no"
                    tools:text="15" />
            </LinearLayout>
            
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <!-- ─── Bottom stats + big CTA ─────────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/bottomBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_3"
        android:paddingEnd="@dimen/spacing_3"
        android:paddingTop="@dimen/spacing_3"
        android:paddingBottom="@dimen/spacing_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_workout">

        <!-- ─── Media Controls (when enabled) ────────────────────────────── -->
        <include 
            android:id="@+id/media_controls"
            layout="@layout/media_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:visibility="gone" />

        <!-- 5 value "pill" chips -->
        <LinearLayout
            android:id="@+id/ll_workout_ValueHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Modern chip-style value displays -->
            <TextView
                android:id="@+id/tv_workout_Value1"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_chip"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="@color/selectedButton"
                android:textStyle="bold"
                tools:text="15" />

            <TextView
                android:id="@+id/tv_workout_Value2"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="@color/selectedButton"
                android:textStyle="bold"
                tools:text="12" />

            <TextView
                android:id="@+id/tv_workout_Value3"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="@color/selectedButton"
                android:textStyle="bold"
                tools:text="10" />

            <TextView
                android:id="@+id/tv_workout_Value4"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="@color/selectedButton"
                android:textStyle="bold"
                tools:text="8" />

            <TextView
                android:id="@+id/tv_workout_Value5"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:background="@drawable/bg_chip"
                android:padding="@dimen/spacing_2"
                android:minHeight="@dimen/touch_target_min"
                android:gravity="center"
                android:textColor="@color/selectedButton"
                android:textStyle="bold"
                tools:text="5" />
        </LinearLayout>

        <!-- Jumbo COMPLETE button - taller for easier post-workout clicking -->
        <Button
            android:id="@+id/btn_workout_CompleteTask"
            style="@style/Widget.App.Button.Primary.Large"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="@dimen/text_size_title"
            android:text="@string/complete"
            android:onClick="btnAction_ChangeActivities"
            android:contentDescription="@string/complete_set_button"
            android:elevation="@dimen/elevation_button"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
