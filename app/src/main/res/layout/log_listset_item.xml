<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_2"
    android:background="@drawable/border_set"
    android:orientation="vertical"
    android:padding="@dimen/spacing_3">

    <!-- Max value (highlight) -->
    <TextView
        android:id="@+id/tv_log_listset_Max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/importantButton"
        android:textStyle="bold" />

    <!-- Total sets -->
    <TextView
        android:id="@+id/tv_log_listset_TotalSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/selectedButton" />

    <!-- Individual set values -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_1"
        android:paddingBottom="@dimen/spacing_1">

        <TextView
            android:id="@+id/tv_log_listset_Value1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_1"
            android:text="TextView"
            android:textColor="@color/selectedButton"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_log_listset_Value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_1"
            android:text="TextView"
            android:textColor="@color/selectedButton"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_log_listset_Value3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_1"
            android:text="TextView"
            android:textColor="@color/selectedButton"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_log_listset_Value4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_1"
            android:text="TextView"
            android:textColor="@color/selectedButton"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_log_listset_Value5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_1"
            android:text="TextView"
            android:textColor="@color/selectedButton"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />
    </LinearLayout>
</android.widget.LinearLayout>
