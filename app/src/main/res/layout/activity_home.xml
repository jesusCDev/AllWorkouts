<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- ─── Top bar ──────────────────────────────────────── -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.App.Toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ─── Main workout card ─────────────────────────────────── -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_workout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_3"
        android:layout_marginBottom="@dimen/spacing_3"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_home_CurrentWorkout"
                style="@style/TextAppearance.App.Headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_4"
                android:layout_marginTop="@dimen/spacing_4"
                android:layout_marginEnd="@dimen/spacing_4"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:text="@string/push_ups"
                android:textSize="@dimen/text_size_headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Push Ups" />

            <ImageView
                android:id="@+id/iv_home_WorkoutShow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/spacing_4"
                android:layout_marginTop="@dimen/spacing_3"
                android:layout_marginEnd="@dimen/spacing_4"
                android:contentDescription="@string/workout_image"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_home_CurrentWorkout"
                app:layout_constraintVertical_bias="0.4"
                app:srcCompat="@mipmap/ic_launcher"
                tools:src="@drawable/ic_pushup" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!-- ─── Workout chooser panel (outside card) ─────────────────────── -->
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_home_WorkoutChooser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginEnd="@dimen/spacing_3"
        android:background="@drawable/bg_chooser_panel"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_2"
        android:paddingTop="@dimen/spacing_2"
        android:paddingEnd="@dimen/spacing_2"
        android:paddingBottom="@dimen/spacing_2"
        android:elevation="@dimen/elevation_card"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ─── Bottom action bar ────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_3"
        android:paddingTop="@dimen/spacing_3"
        android:paddingEnd="@dimen/spacing_3"
        android:paddingBottom="@dimen/spacing_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/btn_ChangeWorkouts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_min"
            android:layout_marginBottom="@dimen/spacing_3"
            android:onClick="onChangeWorkoutsClicked"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_button_secondary"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/change_workout">
            
            <ImageView
                android:id="@+id/iv_workout_selector_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/spacing_2"
                android:layout_marginEnd="@dimen/spacing_2"
                android:src="@drawable/ic_expand_less_black_24dp"
                android:tint="@color/selectedButton"
                android:contentDescription="" />
                
            <TextView
                android:id="@+id/tv_workout_selector_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold"
                android:textColor="@color/selectedButton"
                android:gravity="center"
                android:layout_gravity="center_vertical" />
                
            <!-- Invisible spacer to balance the arrow -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/spacing_2"
                android:layout_marginEnd="@dimen/spacing_2" />
                
        </LinearLayout>

        <Button
            android:id="@+id/btn_Start"
            style="@style/Widget.App.Button.Primary.Large"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_large"
            android:layout_marginTop="@dimen/spacing_2"
            android:layout_marginBottom="@dimen/spacing_4"
            android:onClick="onStartWorkoutClicked"
            android:text="@string/start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_Settings"
                style="@style/Widget.App.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="@dimen/touch_target_min"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_1"
                android:onClick="onSettingsClicked"
                android:text="@string/settings" />

            <Button
                android:id="@+id/btn_Logs"
                style="@style/Widget.App.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="@dimen/touch_target_min"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_1"
                android:onClick="onLogClicked"
                android:text="@string/logs" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
