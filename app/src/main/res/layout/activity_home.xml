<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- â”€â”€â”€ Top bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.App.Toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- â”€â”€â”€ App Title â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <TextView
        android:id="@+id/tv_app_header"
        style="@style/TextAppearance.App.Display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_4"
        android:layout_marginTop="@dimen/spacing_5"
        android:layout_marginEnd="@dimen/spacing_4"
        android:text="4Basic Workouts"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:shadowColor="#33000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- â”€â”€â”€ Calendar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <com.allvens.allworkouts.ui.WorkoutCalendarView
        android:id="@+id/calendar_workout_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_3"
        android:background="@drawable/bg_card_glass_premium"
        android:padding="@dimen/spacing_3"
        android:elevation="@dimen/elevation_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_header" />

    <!-- â”€â”€â”€ Middle Section (Stats - fills available space) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <LinearLayout
        android:id="@+id/middle_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_3"
        android:paddingEnd="@dimen/spacing_3"
        android:paddingTop="@dimen/spacing_4"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/calendar_workout_activity"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Time Estimate (Prominent) -->
        <LinearLayout
            android:id="@+id/ll_time_estimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dropdown"
            android:padding="@dimen/spacing_3"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_3"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_time_estimate_duration"
                style="@style/TextAppearance.App.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~25 min"
                android:textColor="@color/accent_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="@color/text_secondary"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tv_time_estimate_completion"
                style="@style/TextAppearance.App.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done by 3:30 PM"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Quick Stats Row -->
        <LinearLayout
            android:id="@+id/ll_quick_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Total Sessions Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_1"
                android:background="@drawable/bg_dropdown"
                android:padding="@dimen/spacing_3"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_stat_month"
                    style="@style/TextAppearance.App.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="@dimen/spacing_1" />

                <TextView
                    style="@style/TextAppearance.App.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total"
                    android:textColor="@color/text_secondary"
                    android:alpha="0.8" />
            </LinearLayout>

            <!-- Current Streak Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_1"
                android:background="@drawable/bg_dropdown"
                android:padding="@dimen/spacing_3"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_stat_current_streak"
                    style="@style/TextAppearance.App.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent_primary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    style="@style/TextAppearance.App.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="day"
                    android:textColor="@color/text_secondary"
                    android:alpha="0.8"
                    android:layout_marginEnd="@dimen/spacing_1" />

                <TextView
                    android:id="@+id/tv_stat_max_streak"
                    style="@style/TextAppearance.App.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ ðŸ”¥ 0 best"
                    android:textColor="@color/text_secondary"
                    android:alpha="0.7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- â”€â”€â”€ Workout chooser panel (overlay) â”€â”€â”€â”€â”€â”€â”€ -->
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_home_WorkoutChooser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginEnd="@dimen/spacing_3"
        android:layout_marginBottom="@dimen/spacing_2"
        android:background="@drawable/bg_chooser_panel"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_2"
        android:paddingTop="@dimen/spacing_2"
        android:paddingEnd="@dimen/spacing_2"
        android:paddingBottom="@dimen/spacing_2"
        android:elevation="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- â”€â”€â”€ Bottom Bar (Buttons - anchored to bottom) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutAnimation="@anim/layout_stagger_home"
        android:paddingStart="@dimen/spacing_3"
        android:paddingTop="@dimen/spacing_4"
        android:paddingEnd="@dimen/spacing_3"
        android:paddingBottom="@dimen/spacing_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Workout selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:id="@+id/btn_ChangeWorkouts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/touch_target_min"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_3"
                android:paddingEnd="@dimen/spacing_3"
                android:background="@drawable/bg_dropdown"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/change_workout">
                    
                <TextView
                    android:id="@+id/tv_workout_selector_text"
                    style="@style/TextAppearance.App.Body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center_vertical" />
                
                <ImageView
                    android:id="@+id/iv_workout_selector_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_expand_more_black_24dp"
                    android:tint="@color/text_secondary"
                    android:alpha="0.6"
                    android:contentDescription="@string/workout_selector_arrow" />
                    
            </LinearLayout>
            
            <!-- Today's completion indicator -->
            <TextView
                android:id="@+id/tv_today_completion"
                style="@style/TextAppearance.App.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_3"
                android:layout_marginTop="@dimen/spacing_1"
                android:text=""
                android:textColor="@color/text_secondary"
                android:alpha="0.7"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_Start"
            style="@style/Widget.App.Button.Primary.Large"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_standard"
            android:layout_marginTop="@dimen/spacing_4"
            android:layout_marginBottom="@dimen/spacing_3"
            android:onClick="onStartWorkoutClicked"
            android:text="@string/start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_Settings"
                style="@style/Widget.App.Button.Tonal"
                android:layout_width="0dp"
                android:layout_height="@dimen/touch_target_min"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_2"
                android:onClick="onSettingsClicked"
                android:text="@string/settings" />

            <Button
                android:id="@+id/btn_Logs"
                style="@style/Widget.App.Button.Tonal"
                android:layout_width="0dp"
                android:layout_height="@dimen/touch_target_min"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:onClick="onLogClicked"
                android:text="@string/logs" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
