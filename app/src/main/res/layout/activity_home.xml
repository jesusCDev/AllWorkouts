<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- ─── Top bar ──────────────────────────────────────── -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.App.Toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ─── App Title (Floating, borderless design) ──────────────────── -->
    <TextView
        android:id="@+id/tv_app_header"
        style="@style/TextAppearance.App.Display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_4"
        android:layout_marginTop="@dimen/spacing_5"
        android:layout_marginEnd="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_4"
        android:text="4Basic Workouts"
        android:textColor="@color/accent_primary"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:shadowColor="#33000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- ─── Modern Calendar with gradient background and effects ──────────── -->
    <com.allvens.allworkouts.ui.WorkoutCalendarView
        android:id="@+id/calendar_workout_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_3"
        android:layout_marginBottom="@dimen/spacing_4"
        android:background="@drawable/bg_calendar_modern"
        android:padding="@dimen/spacing_4"
        android:elevation="@dimen/elevation_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_header" />

    <!-- ─── Workout chooser panel (overlay, floating above content) ─────── -->
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_home_WorkoutChooser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_3"
        android:layout_marginEnd="@dimen/spacing_3"
        android:layout_marginBottom="@dimen/spacing_6"
        android:background="@drawable/bg_chooser_panel"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_2"
        android:paddingTop="@dimen/spacing_2"
        android:paddingEnd="@dimen/spacing_2"
        android:paddingBottom="@dimen/spacing_2"
        android:elevation="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ─── Bottom action bar ────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_3"
        android:paddingTop="@dimen/spacing_3"
        android:paddingEnd="@dimen/spacing_3"
        android:paddingBottom="@dimen/spacing_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/btn_ChangeWorkouts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_min"
            android:layout_marginBottom="@dimen/spacing_3"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_button_tonal_modern"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/change_workout">
            
            <ImageView
                android:id="@+id/iv_workout_selector_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/spacing_2"
                android:layout_marginEnd="@dimen/spacing_2"
                android:src="@drawable/ic_expand_less_black_24dp"
                android:tint="@color/accent_primary"
                android:contentDescription="@string/workout_selector_arrow" />
                
            <TextView
                android:id="@+id/tv_workout_selector_text"
                style="@style/TextAppearance.App.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/accent_primary"
                android:gravity="center"
                android:layout_gravity="center_vertical" />
                
            <!-- Invisible spacer to balance the arrow -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/spacing_2"
                android:layout_marginEnd="@dimen/spacing_2" />
                
        </LinearLayout>

        <Button
            android:id="@+id/btn_Start"
            style="@style/Widget.App.Button.Primary.Large"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target_standard"
            android:layout_marginTop="@dimen/spacing_3"
            android:layout_marginBottom="@dimen/spacing_4"
            android:onClick="onStartWorkoutClicked"
            android:text="@string/start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_Settings"
                style="@style/Widget.App.Button.Tonal"
                android:layout_width="0dp"
                android:layout_height="@dimen/touch_target_min"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_2"
                android:onClick="onSettingsClicked"
                android:text="@string/settings" />

            <Button
                android:id="@+id/btn_Logs"
                style="@style/Widget.App.Button.Tonal"
                android:layout_width="0dp"
                android:layout_height="@dimen/touch_target_min"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_2"
                android:onClick="onLogClicked"
                android:text="@string/logs" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
