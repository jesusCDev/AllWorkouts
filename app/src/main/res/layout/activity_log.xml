<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_3">

    <!-- Workout Header -->
    <android.support.v7.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_4"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_log_workout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:text="Workout Log"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your progress over time"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_body"
                android:alpha="0.7" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Chart Card -->
    <android.support.v7.widget.CardView
        android:id="@+id/chart_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_3"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_2"
                android:text="Progress Chart"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lc_log_ShowWorkoutProgression"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Settings Card -->
    <android.support.v7.widget.CardView
        android:id="@+id/settings_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_3"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintTop_toBottomOf="@id/chart_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_3"
                android:text="Workout Settings"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold" />

            <!-- Max Value Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/spacing_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Maximum"
                        android:textColor="@color/unSelectedButton"
                        android:textSize="@dimen/text_size_caption"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_log_CurrentMaxContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_half"
                        android:text="0 reps"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_edit_max"
                    style="@style/Widget.App.Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/spacing_2"
                    android:onClick="btnAction_EditCurrentMaxValue"
                    android:text="Edit"
                    android:textSize="@dimen/text_size_caption"
                    android:minWidth="60dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/spacing_1"
                android:background="@color/unSelectedButton"
                android:alpha="0.1" />

            <!-- Type Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/spacing_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workout Type"
                        android:textColor="@color/unSelectedButton"
                        android:textSize="@dimen/text_size_caption"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_log_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_half"
                        android:text="Simple"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_edit_type"
                    style="@style/Widget.App.Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/spacing_2"
                    android:onClick="btnAction_EditType"
                    android:text="Edit"
                    android:textSize="@dimen/text_size_caption"
                    android:minWidth="60dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Workout History Card -->
    <android.support.v7.widget.CardView
        android:id="@+id/history_card"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/spacing_3"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintTop_toBottomOf="@id/settings_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_2"
                android:text="Workout History"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_log_ShowAllWorkoutSets"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:paddingTop="@dimen/spacing_1"
                android:paddingBottom="@dimen/spacing_1"
                android:layoutAnimation="@null" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Danger Reset Button -->
    <Button
        android:id="@+id/button12"
        style="@style/Widget.App.Button.Danger"
        android:layout_width="0dp"
        android:layout_height="@dimen/touch_target_large"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_4"
        android:onClick="btnAction_ResetWorkoutToZero"
        android:text="Reset Workout"
        android:textSize="@dimen/text_size_body"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/history_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>

</ScrollView>
