<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="@dimen/spacing_4">

    <!-- 🎉 Celebration Header -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/spacing_5"
        android:paddingBottom="@dimen/spacing_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Celebration Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏆"
            android:textSize="64sp"
            android:layout_marginBottom="@dimen/spacing_3" />

        <!-- Congratulations Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Congratulations!"
            android:textColor="@color/colorAccent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_2" />

        <!-- Workout Name -->
        <TextView
            android:id="@+id/tv_workoutFinish_WorkoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Workout"
            android:textColor="@color/selectedButton"
            android:textSize="@dimen/text_size_headline"
            android:textStyle="bold"
            android:alpha="0.8" />
    </LinearLayout>

    <!-- 🎨 How was your workout? Section -->
    <android.support.v7.widget.CardView
        android:id="@+id/difficulty_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        app:cardBackgroundColor="@color/background_elevated"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_4">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How was your workout?"
                android:textAlignment="center"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_title"
                android:fontFamily="@font/archivo_black"
                android:layout_marginBottom="@dimen/spacing_3" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This helps us adjust future workouts"
                android:textAlignment="center"
                android:textColor="@color/selectedButton"
                android:textSize="@dimen/text_size_body"
                android:alpha="0.7"
                android:layout_marginBottom="@dimen/spacing_4" />

            <!-- Difficulty Options with Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Easy Option -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_workoutFinish_LevelEasy"
                        style="@style/Widget.App.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:onClick="setDifficulty"
                        android:text="😅\nToo Easy"
                        android:textColor="@color/unSelectedButton"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Normal Option -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_1"
                    android:layout_marginEnd="@dimen/spacing_1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_workoutFinish_LevelNeutral"
                        style="@style/Widget.App.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:onClick="setDifficulty"
                        android:text="👍\nJust Right"
                        android:textColor="@color/background_dark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Hard Option -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_workoutFinish_LevelHard"
                        style="@style/Widget.App.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:onClick="setDifficulty"
                        android:text="💪\nToo Hard"
                        android:textColor="@color/unSelectedButton"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- 🚀 Action Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_4"
        android:orientation="horizontal"
        android:baselineAligned="false"
        app:layout_constraintTop_toBottomOf="@id/difficulty_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Done Button -->
        <Button
            android:id="@+id/button2"
            style="@style/Widget.App.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_2"
            android:onClick="goHome"
            android:text="Done"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />

        <!-- Next Workout Button -->
        <Button
            android:id="@+id/btn_WorkoutFinish_NextWorkout"
            style="@style/Widget.App.Button.Primary.Large"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_2"
            android:onClick="startNextWorkout"
            android:text="Next Workout"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

</android.widget.LinearLayout>
