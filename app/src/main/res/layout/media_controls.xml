<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_controls_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_chip_glossy"
    android:padding="@dimen/spacing_3"
    android:elevation="@dimen/elevation_button"
    tools:visibility="visible">
    
    <!-- Track title -->
    <TextView
        android:id="@+id/tv_track_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_4"
        android:text=""
        android:textSize="@dimen/text_size_body"
        android:textColor="@color/accent_primary"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    
    <!-- Control buttons section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Previous Track -->
        <ImageButton
            android:id="@+id/btn_media_previous"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:layout_weight="0"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/media_previous"
            android:padding="@dimen/spacing_2"
            android:src="@drawable/ic_skip_previous_24dp"
            android:tint="@color/selectedButton"
            android:scaleType="centerInside" />
        
        <!-- Spacer -->
        <View
            android:layout_width="@dimen/spacing_5"
            android:layout_height="1dp" />

        <!-- Play/Pause -->
        <ImageButton
            android:id="@+id/btn_media_play_pause"
            android:layout_width="@dimen/touch_target_large"
            android:layout_height="@dimen/touch_target_large"
            android:layout_weight="0"
            android:background="@drawable/bg_media_play_button"
            android:contentDescription="@string/media_play_pause"
            android:padding="@dimen/spacing_2"
            android:src="@drawable/ic_play_arrow_24dp"
            android:scaleType="centerInside" />
        
        <!-- Spacer -->
        <View
            android:layout_width="@dimen/spacing_5"
            android:layout_height="1dp" />

        <!-- Next Track -->
        <ImageButton
            android:id="@+id/btn_media_next"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:layout_weight="0"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/media_next"
            android:padding="@dimen/spacing_2"
            android:src="@drawable/ic_skip_next_24dp"
            android:tint="@color/selectedButton"
            android:scaleType="centerInside" />
            
    </LinearLayout>

</LinearLayout>
