    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- ─── NOIR TATAMI PALETTE ───────────────────────────────────────────── -->
    
    <!-- Ink Surfaces (Charcoal base) -->
    <color name="ink_950">#0A0B0D</color>              <!-- Deepest ink -->
    <color name="ink_900">#0F1215</color>              <!-- Main surface -->
    <color name="ink_850">#161A1F</color>              <!-- Elevated cards -->
    <color name="ink_line">#343841</color>             <!-- Stroke & borders -->
    
    <!-- Bone Text (Warm off-white) -->
    <color name="bone_100">#F2EDE3</color>             <!-- Primary text -->
    <color name="bone_70">#C9C3B8</color>              <!-- Secondary text -->
    <color name="bone_40">#66F2EDE3</color>            <!-- Tertiary text -->
    
    <!-- Vermilion Accent (High-energy primary) -->
    <color name="vermilion">#FF432C</color>            <!-- Primary CTA -->
    <color name="vermilion_60">#99FF432C</color>       <!-- 60% alpha -->
    <color name="vermilion_30">#4DFF432C</color>       <!-- 30% alpha -->
    <color name="vermilion_20">#33FF432C</color>       <!-- Ripple -->
    <color name="on_vermilion">#0F1215</color>         <!-- Dark text on vermilion -->
    
    <!-- Jade Accent (Success) -->
    <color name="jade">#21C48E</color>                 <!-- Success state -->
    <color name="jade_20">#3321C48E</color>            <!-- Jade ripple -->
    
    <!-- Legacy Surface Compatibility -->
    <color name="surface_950">@color/ink_950</color>
    <color name="surface_900">@color/ink_900</color>
    <color name="surface_850">@color/ink_850</color>
    <color name="surface_800">@color/ink_850</color>
    <color name="surface_ink">@color/ink_950</color>
    <color name="surface">@color/ink_900</color>
    <color name="surface_variant">@color/ink_850</color>
    
    <!-- Legacy Accent Compatibility -->
    <color name="accent_primary">@color/vermilion</color>
    <color name="accent_primary_60">@color/vermilion_60</color>
    <color name="accent_primary_30">@color/vermilion_30</color>
    <color name="accent_primary_15">@color/vermilion_20</color>
    <color name="on_accent_primary">@color/on_vermilion</color>
    
    <!-- Alternative Orange Accent (if needed) -->
    <color name="accent_orange">#FF7A59</color>          <!-- Warm orange option -->
    <color name="accent_orange_30">#4DFF7A59</color>     <!-- 30% alpha -->
    
    <!-- Legacy Compatibility -->
    <color name="primary">#D3FF3E</color>               <!-- Maps to lime accent -->
