    <color name="notification_primary">#D2423A</color>  <!-- Crimson for light theme notifications -->
    <color name="notification_accent">#E85A52</color>   <!-- Brighter accent for notifications -->
    <color name="primary_bright">#FF6B62</color>        <!-- Even brighter for notifications -->
    
