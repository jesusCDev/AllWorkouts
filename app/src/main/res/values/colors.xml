    <color name="colorAccentLess">@color/ripple_primary</color>
    <color name="primary_ripple">@color/ripple_primary</color>
    <color name="secondary_ripple">@color/ripple_secondary</color>
    <color name="tertiary_ripple">#3321C48E</color>
    
    <!-- Heat-map Intensity Colors (Vermilion scale) -->
    <color name="heat_empty">@color/surface_850</color>          <!-- No workout -->
    <color name="heat_low">#40FF432C</color>                     <!-- Low intensity -->
    <color name="heat_medium">#80FF432C</color>                  <!-- Medium intensity -->
    <color name="heat_high">#BFFF432C</color>                    <!-- High intensity -->
    <color name="heat_max">@color/vermilion</color>              <!-- 100% intensity -->

</resources>
