<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="v_workoutSession_show">
        <item name="android:visibility">visible</item>
    </style>

    <style name="v_workoutSession_hide">
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Workout Session Styles -->
    <style name="tv_WorkoutSession_Timer">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_workoutSession_front_show">
        <item name="android:textSize">300sp</item>
        <item name="android:textStyle">bold</item>
        <item name="outlineColor">@color/colorAccent</item>
    </style>

    <style name="tv_workoutSession_front_hide">
        <item name="android:textSize">300sp</item>
        <item name="android:textStyle">bold</item>
        <item name="outlineColor">@android:color/transparent</item>
    </style>


    <style name="tv_workoutSession_back_show">
        <item name="android:textSize">300sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="tv_workoutSession_back_hide">
        <item name="android:textSize">300sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="tv_WorkoutSession_CurrentWorkoutValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutSession_WorkoutValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- HOME BUTTON -->
    <style name="btn_home_workoutChoice">
        <item name="android:drawable">@drawable/border_set</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/unSelectedButton</item>
    </style>

    <style name="button_important">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/importantButton</item>
    </style>


    <!-- NOTIFICATION -->
    <style name="tv_settings_TimeView">
        <item name="android:textColor">@color/importantButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_settings_DaySelected">
        <item name="android:textColor">@color/importantButton</item>
    </style>

    <style name="btn_settings_DayUnSelected">
        <item name="android:textColor">@color/unSelectedButton</item>
    </style>


    <!-- TEXT DOCUMENTATION STYLES -->
    <style name="textStyle_Doc_Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textStyle_Doc_SubTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textStyle_Doc_Paragraph">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
