<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Workout Session Styles -->
    <style name="tv_WorkoutSession_Timer">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutSession_Front">
<!--        <item name="android:background">#00ffffff</item>-->
        <item name="android:textColor">#00000000</item>
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>

        <item name="android:shadowColor">#FFFD542C</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">200sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_WorkoutSession_Back">
        <item name="android:textSize">200sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutSession_CurrentWorkoutValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutSession_WorkoutValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- HOME BUTTON -->
    <style name="btn_home_workoutChoice">
        <item name="android:drawable">@drawable/border_set</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/unSelectedButton</item>
    </style>

    <style name="button_important">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/importantButton</item>
    </style>


    <!-- NOTIFICATION -->
    <style name="tv_settings_TimeView">
        <item name="android:textColor">@color/importantButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_settings_DaySelected">
        <item name="android:textColor">@color/importantButton</item>
    </style>

    <style name="btn_settings_DayUnSelected">
        <item name="android:textColor">@color/unSelectedButton</item>
    </style>


    <!-- TEXT DOCUMENTATION STYLES -->
    <style name="textStyle_Doc_Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textStyle_Doc_SubTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textStyle_Doc_Paragraph">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
