<resources>
    <!-- Main App Theme using modern design principles -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/selectedButton</item>
        <item name="android:textColorSecondary">@color/unSelectedButton</item>
        
        <!-- Window attributes -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="tv_WorkoutMax_Positive">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutMax_Negative">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/background_dark</item>
    </style>

    <!-- Workout Session Styles -->
    <style name="tv_WorkoutSession_Timer">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutSession_CurrentWorkoutValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_WorkoutSession_WorkoutValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- HOME BUTTON -->
    <style name="btn_home_workoutChoice" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">@dimen/spacing_3</item>
        <item name="android:paddingBottom">@dimen/spacing_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selectedButton</item>

        <!-- 🚫 disable the stock background/tint -->
        <item name="android:background">@drawable/bg_chooser_item</item>
        <item name="backgroundTint">@null</item>

        <!-- remove min size so it’s sleeker -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>


    <!-- ─────────── TYPOGRAPHY HIERARCHY ─────────── -->
    <!-- default body text for chips / small labels -->
    <style name="TextAppearance.App.Body" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selectedButton</item>
    </style>

    <style name="button_important">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/importantButton</item>
    </style>


    <!-- NOTIFICATION -->
    <style name="tv_settings_TimeView">
        <item name="android:textColor">@color/importantButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_settings_DaySelected">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_settings_DayUnSelected">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- TEXT DOCUMENTATION STYLES -->
    <style name="textStyle_Doc_Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="textStyle_Doc_SubTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textStyle_Doc_Paragraph">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WorkoutRowTitle">
        <item name="android:textColor">@color/selectedButton</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Global toolbar on dark theme -->
    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/background_dark</item>
        <item name="android:titleTextColor">@color/selectedButton</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!-- Generic text style for screen titles -->
    <style name="TextAppearance.App.Headline">
        <item name="android:fontFamily">@font/archivo_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/selectedButton</item>
    </style>

    <!-- Modern Material Design Buttons -->
    
    <!-- Default text button -->
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/selectedButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/archivo_black</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">@dimen/spacing_3</item>
        <item name="android:paddingEnd">@dimen/spacing_3</item>
        <item name="android:paddingTop">@dimen/spacing_2</item>
        <item name="android:paddingBottom">@dimen/spacing_2</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Primary CTA button with elevated appearance (Crimson) -->
    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <!-- Large primary button for important actions -->
    <style name="Widget.App.Button.Primary.Large" parent="Widget.App.Button.Primary">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/spacing_3</item>
        <item name="android:paddingBottom">@dimen/spacing_3</item>
        <item name="android:elevation">@dimen/elevation_card</item>
    </style>
    
    <!-- Secondary outline button (Teal) -->
    <style name="Widget.App.Button.Secondary" parent="Widget.App.Button">
        <item name="android:background">@drawable/bg_button_secondary_modern</item>
        <item name="android:textColor">@color/secondary</item>
    </style>
    
    <!-- Danger button for destructive actions -->
    <style name="Widget.App.Button.Danger" parent="Widget.App.Button">
        <item name="android:background">@drawable/bg_button_danger</item>
        <item name="android:textColor">@color/dangerButton</item>
    </style>
    
    <!-- Dark AlertDialog Theme -->
    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/background_elevated</item>
        <item name="android:textColorPrimary">@color/selectedButton</item>
        <item name="android:textColorSecondary">@color/unSelectedButton</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>
    
    <!-- Dialog button styling -->
    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- ═══════════════════════════════════════════════════ -->
    <!-- WORKOUT-SPECIFIC ACCENT STYLES                    -->
    <!-- ═══════════════════════════════════════════════════ -->
    
    <!-- Sit-ups: Primary (Crimson) accents -->
    <style name="WorkoutAccent_SitUps">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@color/primary_container</item>
    </style>
    
    <!-- Push-ups: Secondary (Teal) accents -->
    <style name="WorkoutAccent_PushUps">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@color/secondary_container</item>
    </style>
    
    <!-- Pull-ups: Tertiary (Gold) accents -->
    <style name="WorkoutAccent_PullUps">
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:background">@color/on_tertiary</item>
    </style>
    
    <!-- Squats: Crimson + Gold combination -->
    <style name="WorkoutAccent_Squats">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@color/primary_container</item>
    </style>


    <!-- Icon-only buttons (ImageButton / ImageView) -->
    <style name="Widget.App.IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/selectedButton</item>
    </style>

    <!-- styles.xml -->
    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <!-- Default body text colour on dark -->
        <item name="android:textColor">@color/selectedButton</item>
    </style>

</resources>
