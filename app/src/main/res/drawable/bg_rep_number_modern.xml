<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow for depth -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" />
        </shape>
    </item>
    
    <!-- Main background circle -->
    <item
        android:left="4dp" 
        android:right="4dp" 
        android:top="2dp" 
        android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#80000000"
                android:centerColor="#60000000"
                android:endColor="#40000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass highlight -->
    <item 
        android:left="4dp" 
        android:right="4dp" 
        android:top="2dp" 
        android:bottom="100dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#25FFFFFF"
                android:endColor="#08FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner rim -->
    <item
        android:left="6dp" 
        android:right="6dp" 
        android:top="4dp" 
        android:bottom="8dp">
        <shape android:shape="oval">
            <stroke 
                android:width="2dp" 
                android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>