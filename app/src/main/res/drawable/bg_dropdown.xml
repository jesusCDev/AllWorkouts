<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inset shadow (makes it look pressed in) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#25000000"
                android:endColor="#10000000"
                android:type="linear" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Main darker surface -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0D1116" />
            <corners android:radius="13dp" />
        </shape>
    </item>
    
    <!-- Border -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <corners android:radius="13dp" />
        </shape>
    </item>
</layer-list>
