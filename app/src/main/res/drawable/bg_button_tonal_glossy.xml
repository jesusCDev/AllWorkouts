<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#22FFFFFF">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#30000000" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            
            <!-- Main surface with gradient -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#1F2832"
                        android:endColor="#182028"
                        android:type="linear" />
                    <stroke
                        android:width="1dp"
                        android:color="#30D3FF3E" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            
            <!-- Top shine -->
            <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="35dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#18FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                    <corners
                        android:topLeftRadius="13dp"
                        android:topRightRadius="13dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
