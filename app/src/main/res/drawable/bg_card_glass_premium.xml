<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main glass surface with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#22FFFFFF"
                android:endColor="#18FFFFFF"
                android:angle="135" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- Inner glow border -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
            <corners android:radius="17dp" />
        </shape>
    </item>
</layer-list>
