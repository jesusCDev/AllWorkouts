<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_primary">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:bottom="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="@dimen/corner_radius_large" />
                </shape>
            </item>
            
            <!-- Main button surface -->
            <item android:top="0dp" android:left="0dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#E8FF5C"
                        android:centerColor="#D3FF3E"
                        android:endColor="#B8E836"
                        android:type="linear" />
                    <corners android:radius="@dimen/corner_radius_large" />
                </shape>
            </item>
            
            <!-- Top shine highlight -->
            <item android:top="0dp" android:left="0dp" android:right="3dp" android:bottom="30dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                    <corners
                        android:topLeftRadius="@dimen/corner_radius_large"
                        android:topRightRadius="@dimen/corner_radius_large" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
