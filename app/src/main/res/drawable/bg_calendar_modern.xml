<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle shadow for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10000000"
                android:endColor="#30000000"
                android:angle="135" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>
    
    <!-- Main gradient background -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/surface_850"
                android:centerColor="@color/surface_800"
                android:endColor="@color/surface_900"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="@dimen/corner_radius_large" />
            <stroke
                android:width="1dp"
                android:color="@color/accent_primary_15" />
        </shape>
    </item>
    
    <!-- Subtle inner highlight -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/accent_primary_15"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
</layer-list>