<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Contact shadow ellipse -->
    <item 
        android:top="8dp"
        android:left="20dp"
        android:right="20dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#14000000" /> <!-- 8% black shadow -->
        </shape>
    </item>
    
    <!-- Main frame background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_variant" />
            <stroke 
                android:width="@dimen/stroke_width_standard" 
                android:color="@color/outline" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>
    
</layer-list>