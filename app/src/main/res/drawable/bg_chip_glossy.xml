<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#25000000" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
    
    <!-- Main surface -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1A2530"
                android:endColor="#12171C"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#50D3FF3E" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
    
    <!-- Inner top shine -->
    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#15FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners
                android:topLeftRadius="11dp"
                android:topRightRadius="11dp" />
        </shape>
    </item>
</layer-list>
