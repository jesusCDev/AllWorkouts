<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep dark backdrop for maximum text contrast -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#70000000"
                android:centerColor="#55000000"
                android:endColor="#65000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Modern frosted glass effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#12FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#08FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle noise texture for realism -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#05FFFFFF"
                android:centerColor="#12FFFFFF"
                android:endColor="#05FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Central spotlight for rep numbers -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="0.6"
                android:startColor="#00000000"
                android:endColor="#25000000"
                android:type="radial" />
        </shape>
    </item>
</layer-list>