<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow for depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>
    
    <!-- Main card surface -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ink_850" />
            <stroke
                android:width="2dp"
                android:color="@color/ink_line" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>
    
    <!-- Subtle inner highlight -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#12FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
</layer-list>
