<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base frosted glass -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0000000" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>

    <!-- Noise-like scatter layers to simulate frost texture -->
    <item android:left="2dp" android:top="2dp" android:right="28dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>

    <item android:left="20dp" android:top="6dp" android:right="12dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#0AFFFFFF" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>

    <item android:left="10dp" android:top="12dp" android:right="18dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#08FFFFFF" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>

    <!-- Very subtle overall highlight -->
    <item android:top="0dp" android:bottom="28dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#0DFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="@dimen/corner_radius_large" />
        </shape>
    </item>
</layer-list>
