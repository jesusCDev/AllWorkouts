<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base smooth gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0B0F12"
                android:centerColor="#10141A"
                android:endColor="#151A22"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle red accent from top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="50%"
                android:centerY="10%"
                android:startColor="#12E63946"
                android:centerColor="#08E63946"
                android:endColor="#00E63946" />
        </shape>
    </item>
    
    <!-- Bright top shine -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
