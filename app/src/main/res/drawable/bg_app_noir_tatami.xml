<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base ink surface -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ink_900" />
        </shape>
    </item>
    
    <!-- Radial vignette for atmosphere -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="50%"
                android:centerY="20%"
                android:startColor="#00000000"
                android:centerColor="#08000000"
                android:endColor="#18000000" />
        </shape>
    </item>
    
    <!-- Subtle bottom gradient -->
    <item android:top="600dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#10000000" />
        </shape>
    </item>
</layer-list>
