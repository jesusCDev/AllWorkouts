<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false" android:color="@color/text_secondary" />
    <!-- Selected/Pressed state -->
    <item android:state_selected="true" android:color="@color/text_primary" />
    <item android:state_pressed="true" android:color="@color/text_primary" />
    <!-- Default enabled state -->
    <item android:color="@color/accent_primary" />
</selector>